{
  "name": "uncertainty-tool",
  "version": "0.1.0",
  "description": "A professional measurement uncertainty analysis and calculator tool.",
  "author": {
    "name": "Barry Baker, Venz Burgos"
  },
  "private": true,
  "main": "electron/main.js",
  "type": "module",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "katex": "^0.16.25",
    "mathjax": "^4.0.0",
    "mathjs": "^15.1.0",
    "pdf-lib": "^1.17.1",
    "plotly.js-basic-dist": "^3.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-plotly.js": "^2.6.0",
    "react-select": "^5.10.2",
    "recharts": "^3.5.1",
    "simple-statistics": "^7.8.8",
    "uuid": "^13.0.0",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on tcp:3000 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.uncertainty.tool",
    "productName": "Uncertalytics",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "vite": "^7.2.6",
    "wait-on": "^9.0.3"
  }
}
